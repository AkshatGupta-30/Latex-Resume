\usepackage{graphicx}
\usepackage{tikz}

\newcommand{\roundpic}[1]{
    \begin{figure}
        \centering
        \tikz \draw [
            path picture={
                \node at (path picture bounding box.center){
                    \includegraphics[height=3.5cm]{#1}
                };
            }
        ] (0,2) circle (1.7);
    \end{figure}
}